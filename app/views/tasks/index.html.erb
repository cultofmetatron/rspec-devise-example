<p id="notice"><%= notice %></p>

<h1>Listing Tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Created at</th>
      <th>Content</th>
      <th>Due date</th>
      <th>Done</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @logged_in %>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.created_at %></td>
          <td><%= task.content %></td>
          <td><%= task.due_date %></td>
          <td><%= task.done %></td>
          <td><%= link_to 'Show', task %></td>
          <td><%= link_to 'Edit', edit_task_path(task) %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else %>
     Welcome to Tasker, the most ultimate new task tracking system!!, please sign in

    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Task', new_task_path %>
